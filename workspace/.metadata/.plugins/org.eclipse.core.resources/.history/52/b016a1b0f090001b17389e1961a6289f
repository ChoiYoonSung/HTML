		<script type="text/javascript">
		$(document).ready(function(){
			$('div').click(function(){
				console.log("div 클릭")
			})
			$('p').click(function(e){
				console.log("p 클릭")
				e.stopPropagation();	// 이벤트 중복 발생 방지
// 				return false;
			})
			$('span').click(function(e){
				console.log("span 클릭")
// 				e.stopPropagation();
				return false;
			})
			
			$('h1','#div2').click(function(){
				$(this).css("backgroundColor","aqua");
				return false;
			})
			$('span').click(function(){
				$(this).css("backgroundColor","red");
				return false;
			})
			
			
			
		})
		</script>
