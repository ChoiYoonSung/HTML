<!DOCTYPE html>
<html lang="kr">
	<head>
		<meta charset="UTF-8">
		<title>Insert title here</title>
		<script src="../../js/jquery-3.6.0.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$('div').click(function(){
					$(this).css("border","2px solid #FF7F50");
					// 방법1) p 태그를 만들어서 추가
					$(this).append( $('<p>Hello</p>'));
				
					// 방법2) 텍스트 노트 만들어서 추가
					var node = document.createTextnode("Hi");
					$(this).append(node);
				});
				
				$('span').click(function(){
					$(this).css("border","2px solid black");
					return false;
				});
				
				$('button').click(function(){
					$(this).css("border","2px solid red");
					return false;
				});
				
				var today = (new Date()).getFullYear();
				$('a').click(function(e){
					var birth = prompt("태어난 연도를 입력하십시오.");
					if(birth == null){
						alert("입력된 값이 없습니다.");
						return false;
					}
					
					if((today- birth) < 19 && (today - birth) > 0){
						alert("사이트에 접속하지 못합니다.");
						e.preventDefault();
					}else if ((today - birth) < 0){
						alert("잘못된 입력 입니다.");
						e.preventDefault();
					};
				});
			});
		</script>
		<style type="text/css">
			div{
				background-color: aqua;
				height: 300px;
				width: 400px;
			}
			span{
				background-color: yellow;
				height: 100px;
				width: 200px;
				display: inline-block;
				margin: 50px;
			}
			button {
				margin: 75px;
				margin-bottom: 35px;
				margin-top: 35px;
			}
		</style>
	</head>
	<body>
		<div>
			<span>
				<button type="button">클릭</button>
			</span>
		</div>
