		<script src="../../js/jquery-3.6.0.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$("#btn").click(function(){
					var ele = "";
					var count = 0;
					$("#div1 :checkbox:checked").each(function(){
						count++;
						ele += $(this).prop("html");
						if($("#div1 :checkbox:checked").length != count)
							ele += ", ";
					});
					alert(ele);
					$('#result').html("선택결과 : " + ele).css("visibility","visible")

				})
			})
		</script>
	</head>
