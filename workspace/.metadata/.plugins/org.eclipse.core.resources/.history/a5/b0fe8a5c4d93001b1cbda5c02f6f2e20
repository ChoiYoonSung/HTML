		<script type="text/javascript">
			$(document).ready(function(){
				// 첫 번쨰 노란색 배경
				$('li').first().css("backgroundColor","yellow");

				// 각 리스트(ol)의 첫 번째 li에 빨간색 테두리
				$('ol li:first-child()').css("border","2px solid red");
				
				// 마지막 초록색 배경
				$('li').last().css("backgroundColor","yellow");
				
				// 각 리스트의 마지막 li에 점선 테두리
				$('ol li:last-child()').css("border","2px groove blue");
			})
		</script>
	</head>
