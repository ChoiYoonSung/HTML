		<script type="text/javascript">
			$(document).ready(function(){
				$('a').click(function(e){
					e.preventDefault();
				});
				
				var href;
				$('a','#div1').click(function(){
					href = $(this).attr("href");
					$('#img1').slideUp(1000,"linear",function(){
						$('#img1').attr("src",href); 
						$('#img1').slideDown(1000);
					});
				});
				
				$('a','#div1').click(function(){
					href = $(this).attr("href");
